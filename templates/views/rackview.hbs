<div class="Racks">
    <div class="search-assets" id="search-assets">
        <input type="text" id="racks-search-bar" placeholder="Search for Assets..." onkeyup="Clear()">
        <button id="racks-search-clear" onclick="ClearSearchBar()"><i class="fa-solid fa-xmark"></i></button>
        <button id="racks-search-btn" type="submit"><i class="fa fa-search"></i></button>
    </div>
    
    <div id="rack-operations">
        <div>
            <button id="CreateAsset" class="btns" onclick="OpenCreate()">Add Asset <i class="fa-solid fa-plus"></i></button>
            <div>
                    <form action="" class="FormBox" id="CreateForm">
                    <div class="title-div" id="CreateTitle"><p>Add Asset</p></div>
                    <div class="form-contents">
                        <label for="">Asset Name</label>
                        <input type="text" name="AssetName" id="AssetName" required>

                        <label for="">Rack Numbers</label>
                        <input type="text" name="RackNumbers" id="RackNumbers" placeholder="Eg : { 5.6,9.2,3.2 }" required>

                        <label for="">Box Numbers</label>
                        <input type="text" name="BoxNumbers" id="BoxNumbers" placeholder="Eg : { 5,6,9,2 }">

                        <label for="">Remarks</label>
                        <input type="text" name="Remarks" id="Remarks">

                        <div class="buttons">
                            <button type="submit" id="CrtBtn">Add</button>
                            <p onclick="CloseCreate()">Close</p>
                        </div>
                        
                        
                    </div>
                    
                    <p id="FormContentCreate" class="FormContent"></p>
                    </form>
                </div>
        </div>
        <div>
            <button id="UpdateAsset" class="btns" onclick="OpenUpdate()">Update Asset <i class="fa-solid fa-retweet"></i></button>
            <div>
                    <form action="" class="FormBox" id="UpdateForm">
                    <div class="title-div" id="UpdateTitle"><p>Update Asset</p></div>
                    <div class="form-contents">
                        <label for="">Asset Name</label>
                        <input type="text" name="AssetName" id="AssetName" required>

                        <label for="">Update Rack Numbers</label>
                        <input type="text" name="RackNumbers" id="RackNumbers" placeholder="Eg : { 5.6,9.2,3.2 }" required>

                        <label for="">Update Box Numbers</label>
                        <input type="text" name="BoxNumbers" id="BoxNumbers" placeholder="Eg : { 5,6,9,2 }">

                        <label for="">Update Remarks</label>
                        <input type="text" name="Remarks" id="Remarks">


                        <div class="buttons">
                            <button type="submit">Update</button>
                            <p onclick="CloseCreate()">Close</p>
                        </div>
                        
                    </div>
                    <p id="FormContentUpdate" class="FormContent"></p>
                    </form>
                </div>
        </div>
        <div>
            <button id="DeleteAsset" class="btns" onclick="OpenDelete()">Delete Asset <i class="fa-solid fa-minus"></i></button>
            <div>
                    <form action="" class="FormBox" id="DeleteForm">
